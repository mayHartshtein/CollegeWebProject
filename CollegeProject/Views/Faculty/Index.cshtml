@model IEnumerable<CollegeProject.Models.Faculty>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.Identity.Name.Equals("admin@gmail.com"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<div class="container">
    <div class="col-md-4 col-sm-6">
        <div class="service-wrapper">
            @using (Html.BeginForm())
            {
                <p>
                    <h4>Search faculty by </h4><br />
                    <div>
                        Name:<br /> @Html.TextBox("FacultyName")
                        <input type="submit" value="search" class="btn btn-default" />
                    </div>
                </p>
            }
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FacultyName)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FacultyID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FacultyID })
            </td>
        </tr>
    }
</table>
